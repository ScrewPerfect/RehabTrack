<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RehabTrack"
        tools:targetApi="31">

        <!-- Activity 1: Main -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity 2: List -->
        <activity
            android:name=".ExerciseListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Activity 3: Detail -->
        <activity
            android:name=".ExerciseDetailActivity"
            android:exported="false"
            android:parentActivityName=".ExerciseListActivity" />

        <!-- Activity 4: History (THIS IS THE ONE THAT WAS MISSING) -->
        <activity
            android:name=".HistoryActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>